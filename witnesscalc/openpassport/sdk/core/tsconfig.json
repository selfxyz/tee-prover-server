{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": [
    "index.ts",
    "src/index.node.ts",
    "src/**/*",
    "common/**/*",
    "circuits/**/*",
    "circuits/**/*.json",
    "utils/utils.ts",
    "../../common/src/utils/openPassportAttestation.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "dist",
    "common/src/utils/csca.ts"
  ]
}